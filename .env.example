# Copy to .env and fill in values. Used when config.json is not present (e.g. Docker).
# Nested database vars use prefix DATABASE__

# Bot (required)
BOT_TOKEN=your_telegram_bot_token

# Database (required)
DATABASE={"db_name":"telegram_bot","user":"<USERNAME>","password":"<YOUR_PASSWORD>","host":"db","port":5432,"table_name":"organizer_table"}
# Optional: connection pool (defaults: pool_size=5, max_overflow=10)
# DATABASE__POOL_SIZE=5
# DATABASE__MAX_OVERFLOW=10

# Optional: fallback admin Telegram user IDs when user not in DB or DB unavailable (JSON array). Also used for Stop if FALLBACK_ADMIN_IDS is not set.
AUTHORIZED_IDS=[1234567890]

# Optional: override fallback admin IDs (JSON array); if set, used instead of AUTHORIZED_IDS
# FALLBACK_ADMIN_IDS=[1234567890]

# Required: base64 Fernet key for encrypting user data (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_base64_fernet_key_here

# Optional: allowed item types (JSON array or comma-separated)
ALLOWED_TYPES=["spare part","miscellaneous"]

# Optional: validation
MIN_LEN_STR=1
MAX_LEN_STR=255
SKIP_WORKING_HOURS=true

# Optional: app
APP_NAME=Telegram Bot API
DEBUG=false

# Webhook (set when using webhook; optional secret for verification)
WEBHOOK_URL=https://your-domain.com/webhook/telegram
WEBHOOK_SECRET_TOKEN=your_secret_token

# Optional: create tables on startup (default true; set false if you run migrations separately)
# CREATE_TABLES_ON_STARTUP=true
# Optional: CORS origins (default *; use comma-separated or JSON list in production)
# CORS_ORIGINS=*

# Web admin panel (accessible at /admin)
WEB_ADMIN_USER=admin
WEB_ADMIN_PASSWORD=changeme
# JWT secret for admin session cookies (random per-restart if not set â€” set this to keep sessions across restarts)
# WEB_ADMIN_JWT_SECRET=your_random_secret_here
